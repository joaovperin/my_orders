{
    // Tamanho da linha no Dart
    "dart.lineLength": 150,

    // Causes the debug view to automatically appear when a breakpoint is hit. This
    // setting is global and not configurable per-language.
    "debug.openDebug": "openOnDebugBreak",

    // Localização da barra de debug
    "debug.toolBarLocation": "docked",

    // Configurações do Dart
    "[dart]": {
        // Formata ao salvar
        "editor.formatOnSave": true,

        // Formata ao digitar alguns caracterers (`;` ou `}`, por exemplo).
        "editor.formatOnType": true,

        // Identação com 4 espaços
        "editor.tabSize": 4,

        // Substitui tabs por espaços
        "editor.insertSpaces": true,

        // Mantém a identação configurada (não carrega a dos arquivos)
        "editor.detectIndentation": false,

        // Modo de inserção de sugestões: substitui o que estiver no cursor
        "editor.suggest.insertMode": "replace",

        // Disabilita o highlight automático das palavras selecionadas. Assim, deixa o Dart aplicar o highlight
        // apenas nas referências exatas da variável selecionada
        "editor.selectionHighlight": false,

        // Ajusta a régua do editor
        "editor.rulers": [150],

        // By default, VS Code prevents code completion from popping open when in
        // "snippet mode" (editing placeholders in inserted code). Setting this option
        // to `false` stops that and allows completion to open as normal, as if you
        // weren't in a snippet placeholder.
        "editor.suggest.snippetsPreventQuickSuggestions": false,

        // Allows pressing <TAB> to complete snippets such as `for` even when the
        // completion list is not visible.
        "editor.tabCompletion": "onlySnippets"
    }
}